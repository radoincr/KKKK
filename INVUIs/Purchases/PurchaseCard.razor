@using INV.App.Purchases
@using INV.Domain.Entities.Purchases
@using INVUIs.Shared
<div class="container-supplier">
	<div class="content-info-suplier">
		<div class="info-box pos-titel-info-supplier">
		

		<div class="info-boxs-show">
			<div class="info-box-part1">
                <div class="purchase-container d-f justify-content:center">
					<h2>Purchase Details</h2>
					<div class="purchase-info">
						<div class="purchase-item"><strong>Status:</strong> <span>@purchaseInfo.Status</span></div>
						<div class="purchase-item"><strong>Number:</strong> <span>@purchaseInfo.Number</span></div>
						<div class="purchase-item"><strong>Date:</strong> <span>@purchaseInfo.Date.ToShortDateString()</span></div>
						<div class="purchase-item"><strong>Service Type:</strong> <span>@purchaseInfo.ServiceType</span></div>
						<div class="purchase-item"><strong>Budget Type:</strong> <span>@purchaseInfo.BudgeType</span></div>
						<div class="purchase-item"><strong>Budget Article:</strong> <span>@purchaseInfo.BudgeArticle</span></div>
						<div class="purchase-item"><strong>Total (HT):</strong> <span>@purchaseInfo.TotalHT.ToString("C")</span></div>
						<div class="purchase-item"><strong>Total TVA:</strong> <span>@purchaseInfo.TotalTVA.ToString("C")</span></div>
						<div class="purchase-item"><strong>Total (TTC):</strong> <span>@purchaseInfo.TotalTTC.ToString("C")</span></div>
						<div class="purchase-item"><strong>Completion Delay:</strong> <span>@purchaseInfo.CompletionDelay days</span></div>
					</div>
				</div>



				
				
			</div>
		</div>


        </div>
    </div>

</div>
<style>
    .purchase-container {
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
        text-align: center;
    }

        .purchase-container h2 {
            color: #257180;
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

    .purchase-info {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        justify-content: center;
        padding: 15px;
        background: #fff;
        border-radius: 8px;
        border-left: 5px solid #FD8B51;
        font-size: 1rem;
        overflow-x: auto; /* Allow scrolling if needed */
    }

    .purchase-item {
        display: flex;
        align-items: center;
        background: #fff;
        padding: 8px 12px;
        border-radius: 5px;
        border-bottom: 2px solid #FD8B51;
        min-width: 180px; /* Ensures consistent label width */
    }

        .purchase-item strong {
            min-width: 150px; /* Aligns labels properly */
            text-align: right;
            color: #257180;
            margin-right: 10px;
        }

        .purchase-item span {
            font-weight: bold;
            color: #333;
        }



</style>

@code{
	[Parameter] public PurchaseOrder purchaseInfo { set; get; }


} 