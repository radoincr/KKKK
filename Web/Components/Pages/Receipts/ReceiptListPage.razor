@page "/receptions"


<ReceptionList Receptions=@receipts >
	<Pills>
		<button type="button"class="addsupplier-button" @onclick="() => purchaseSelector.ShowModal()"><i class="bi bi-person-plus"></i> Select a purchase to receive</button>
		<PurchaseSelector Title="Select Command" Command="purchases" OnSelected="CommandSelectednew" @ref="purchaseSelector" />
		<button type="button" class="addsupplier-button" @onclick="() => wareHouseForm.ShowModal()"><i class="bi bi-house-add"></i> Create WareHouse</button>
        <WareHouseForm @ref="wareHouseForm"/>
	</Pills>
</ReceptionList>